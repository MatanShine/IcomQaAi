generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-1.1.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model customer_support_chatbot_ai {
  id           Int       @id
  session_id   String
  user_id      String?
  question     String
  answer       String
  context      String?
  history      String?
  theme        String?
  date_asked   DateTime?
  duration     Float?
  tokens_sent  Int?
  tokens_received  Int?
}

model support_requests {
  id                Int      @id
  session_id        String
  user_id           String?
  theme             String?
  date_added        DateTime?
}

model comments {
  id                  Int      @id @default(autoincrement())
  user_name           String
  question_id         Int
  question_session_id String
  is_answer_in_db     Boolean
  is_answer_in_context Boolean
  date_added          DateTime @default(now())
  is_bug_fixed        Boolean  @default(false)
  issue_description   String?
  solution_suggestion String?
}